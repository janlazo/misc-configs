<?xml version="1.0"?>
<ruleset name="JanLazo">
    <description>Jan Edmund Lazo's PHP coding standard</description>

    <rule ref="PSR2">
        <!-- Accept that some text editors need BOM for file encoding -->
        <exclude name="Generic.Files.ByteOrderMark"/>

        <!-- Methods and Function Calls -->
        <exclude name="Generic.Functions.FunctionCallArgumentSpacing"/>
        <exclude name="PSR2.Methods.FunctionCallSignature.SpaceAfterCloseBracket"/>
    </rule>
</ruleset>
