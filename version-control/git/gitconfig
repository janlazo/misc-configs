[push]
	default = current
[credential]
	helper = cache
[core]
	editor = vim
[color]
	ui = true
[url "https://github.com/"]
	insteadOf = gh:
[url "https://bitbucket.org/"]
	insteadOf = bb:
[alias]
	# Fix the repo
	fuck = reset HEAD --hard
	undo = reset HEAD

	# General
	st = status -s
	cf = config
	rb = rebase
	rb-a = rebase --abort
	rb-c = rebase --continue
	rb-s = rebase --skip
	pl = pull --rebase
	df = diff
	df-c = diff --cached
	co = checkout
	ph = push
	ph-a = push --all
	ph-f = push --force-with-lease
	ph-fa = push --force-with-lease --all
	mg = merge
	br = branch
	cm = commit
	clo = clone
	l = log --graph --decorate --oneline
	l-a = log --graph --decorate --oneline --all

	# Submodules
	subm = submodule
	subma = submodule add
	submst = submodule status --recursive
	submi = submodule init
	submdi = submodule deinit --force
	submup = submodule update --init --recursive
	submup-r = submodule update --init --recursive --remote

	# SVN
	srb = svn rebase
	sbr = svn branch
	scm = svn dcommit
	sclo = svn clone
[status]
	submodulesummary = true
