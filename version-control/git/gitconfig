[push]
	default = current
[credential]
	helper = cache
[core]
	editor = vim
	filemode = false
[color]
	ui = true
[url "https://github.com/"]
	insteadOf = gh:
[url "https://bitbucket.org/"]
	insteadOf = bb:
[alias]
	# Fix the repo
	fuck = reset HEAD --hard

	# General
	st = status -s
	cf = config
	rb = rebase
	pl = pull
	df = diff
	co = checkout
	ph = push
	mg = merge
	br = branch
	cm = commit
	clo = clone
	l = log --graph --decorate

	# Submodules
	sub = submodule
	subst = submodule status --recursive
	subi = submodule init
	subdi = submodule deinit --force
	subup = submodule update --init --recursive

	# SVN
	srb = svn rebase
	sbr = svn branch
	scm = svn dcommit
	sclo = svn clone
