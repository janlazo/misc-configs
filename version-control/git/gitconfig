[push]
	default = current
[credential]
	helper = cache
[core]
	editor = vim
[color]
	ui = true
[url "https://github.com/"]
	insteadOf = gh:
[url "https://bitbucket.org/"]
	insteadOf = bb:
[alias]
	# Fix the repo
	fuck = reset HEAD --hard
	undo = reset HEAD

	# General
	st = status -s
	stat = status
	cf = config
	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbs = rebase --skip
	pl = pull --rebase
	df = diff
	dfc = diff --cached
	co = checkout
	ph = push
	pha = push --all
	phf = push --force-with-lease
	phfa = push --force-with-lease --all
	mg = merge
	br = branch
	cm = commit
	clo = clone
	l = log --graph --decorate --oneline
	la = log --graph --decorate --oneline --all

	# Submodules
	subst = submodule status --recursive
	subi = submodule init
	subdi = submodule deinit --force
	subup = submodule update --init --recursive

	# SVN
	srb = svn rebase
	sbr = svn branch
	scm = svn dcommit
	sclo = svn clone
[status]
	submodulesummary = true
