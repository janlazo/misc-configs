[push]
	default = current
[credential]
	helper = cache
[core]
	editor = vim
[color]
	ui = true
[url "https://github.com/"]
	insteadOf = gh:
[url "https://bitbucket.org/"]
	insteadOf = bb:
[alias]
	# Fix the repo
	fuck = reset HEAD --hard
	fix = git rebase -i HEAD~1

	# General
	st = status -s
	cf = config
	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbs = rebase --skip
	pl = pull --rebase
	df = diff
	dfc = diff --cached
	co = checkout
	ph = push
	pha = push --all
	phf = push --force-with-lease
	phfa = push --force-with-lease --all
	mg = merge
	br = branch
	cm = commit
	clo = clone
	l = log --graph --decorate --oneline
	la = log --graph --decorate --oneline --all

	# Submodules
	subm = submodule
	subm-a = submodule add
	subm-st = submodule status --recursive
	subm-i = submodule init
	subm-di = submodule deinit --force
	subm-up = submodule update --init --recursive
	subm-upr = submodule update --init --recursive --remote

	# SVN
	s-rb = svn rebase
	s-br = svn branch
	s-cm = svn dcommit
	s-clo = svn clone
[status]
	submodulesummary = true
