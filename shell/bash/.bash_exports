### Text Editor ###
export VISUAL=vim;
export EDITOR=vim;


### Language Locales ###
export LC_ALL=en_US.UTF-8;
export LANG=en_US.UTF-8;
export LANGUAGE=en_US.UTF-8;


### Paths ###
export PYTHONPATH=$PYTHONPATH:/usr/bin:/usr/local/bin;


### Misc. Environment Variables ###


### User-Defined Exports ###
export PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[01;34m\] \w\n\$\[\033[00m\] '

# add to path user's private bin if it exists
if [ -d "$HOME/bin" ] ;
then
    export PATH=$PATH:$HOME/bin;
fi;

# TODO Update this after installing a Java Dev Toolkit (JDK)
export JAVA_HOME=$JAVA_HOME;

if [ -n "$JAVA_HOME" ];
then
    export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$JAVA_HOME/lib;
    export CLASSPATH=$CLASSPATH:$LD_LIBRARY_PATH;

    export PATH=$PATH:$JAVA_HOME/bin;
fi;
